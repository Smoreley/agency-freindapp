<div class="container">
    <br>
    <div class="row">
        <div class="col-sm-12">
            <%= image_tag @user.profile_image, size: "206x250"%>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <h2><%= @user.first_name if @user.first_name %><small>
                <%= @user.last_name if @user.last_name %>
            </small></h2>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <p>Gender: <%= @user.gender if @user.gender %></p>
            <p>Email: <%= @user.email if @user.email %></p>
            <p>Link: <%= link_to "FaceBook Link", @user.link%></p>
        </div>
    </div>
    
    <hr>
</div>

    <div class="panel-footer clearfix">
        <div class="col-sm-12">
            <div class="btn-toolbar ">
                <div class="pull-right">
                    <%= button_to 'Sign out', signout_path, class: "btn btn-primary btn-sm", method: "get" %>
                </div>
                <div class="pull-left">
                    <%= button_to 'Edit', edit_user_path, class: "btn btn-success btn-sm", method: "get" %>
                </div>
            </div>
        </div>
    </div>

<div class="wrapper">
  <p>Your website content here.</p>
  <div class="push"></div>
</div>
<div class="footer">
  <p>Copyright (c) 2008</p>
</div>