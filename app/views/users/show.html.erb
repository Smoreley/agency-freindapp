<div class="container">
    <br>
    <div class="row">
        <div class="col-sm-12">
            <%= image_tag @user.profile_image, size: "206x250"%>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <h2><%= @user.first_name if @user.first_name %><small>
                <%= @user.last_name if @user.last_name %>
            </small></h2>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <p>Gender: <%= @user.gender if @user.gender %></p>
            <p>Email: <%= @user.email if @user.email %></p>
            <p>Link: <%= link_to "FaceBook Link", @user.link%></p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <%= link_to 'Sign out', signout_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>