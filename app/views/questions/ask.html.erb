<h1>Question</h1>

<div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <% if @question %>
                    <% if @question.image != nil %>
                    <%= image_tag @question.image, size: "206x250", id: "profile_img" %>
                <% end %>
                <% end %>
            </div>
            <div class="panel-body">
                
                <% if @question %>
                
                    <%=  @question.inquire %>
                
                    <%= form_for Answer.new, :html => { :id => "question_form" } do |f| %>
                        <%= hidden_field_tag :user_id, current_user.id %>
                        <%= hidden_field_tag :question_id, @question.id %>
                        <%= hidden_field_tag :ans, false, id: "answer" %>
                
                        <footer class="footer">
                            <nav class="navbar navbar-inverse navbar-fixed-bottom">       
                                <div class="btn-group btn-group-justified" role="group">
                                    <%= link_to '', "#", :onclick => "$('#answer').val(false); $('#question_form').submit();", class: "btn glyphicon glyphicon-minus-sign", style: "font-size:1.3em" %>

                                    <%= link_to '', "#", :onclick => "$('#answer').val(true); $('#question_form').submit();", class: "btn glyphicon glyphicon-plus-sign", style: "font-size:1.3em" %>
                                </div>
                            </nav> 
                        </footer>
                    <% end %>

                <% elsif %>
                
                <h3>We don't have any more questions at the moment. Be sure to check back from time to time for when more are added.</h3>
                
                <% end %>
            </div>
    </div>
</div>